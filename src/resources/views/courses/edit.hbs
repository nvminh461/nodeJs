<div class="mt-4">
    <h3>Edit course</h3>
    <form action="/courses/{{course.id}}/update?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="video_id">Video Id</label>
            <input type="text" class="form-control" id="video_id" name="video_id" value="{{course.video_id}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
